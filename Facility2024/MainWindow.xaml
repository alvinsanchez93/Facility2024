<Window x:Class="Facility2024.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Facility2024"
        mc:Ignorable="d"
        Title="Facility2024" Height="600" Width="900">
    
    <!--Alvin Cesar Sanchez Ochoa Alvarez-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Menu Height="48" Width="Auto" Padding="8" >
            <MenuItem Header="Orders" Padding="8 0" Margin="4 0" Height="32" />
            <MenuItem Header="Products" Padding="8 0" Margin="4 0" Height="32" />
            <MenuItem Header="Sellers" Padding="8 0" Margin="4 0" Height="32" />
            <MenuItem Header="Clients" Padding="8 0" Margin="4 0" Height="32" />
            <MenuItem Header="Location" Padding="8 0" Margin="4 0" Height="32" />
        </Menu>

        <ScrollViewer Grid.Row="1">
        </ScrollViewer>
    </Grid>
</Window>
